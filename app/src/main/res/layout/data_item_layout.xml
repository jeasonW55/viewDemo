<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/green"
        android:id="@+id/item_show_image"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_60"/>

    <TextView
        android:text="abcdef"
        android:id="@+id/item_show_text"
        android:layout_width="296dp"
        android:layout_height="28dp"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginVertical="@dimen/dp_10"
        android:gravity="left"
        app:layout_constraintLeft_toRightOf="@id/item_show_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="12:55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_show_text" />

    <View
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/item_show_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="#999999"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>